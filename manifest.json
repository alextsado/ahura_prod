 {
    "name": "Ahura AI Study Sprint Demo",
    "short_name": "Ahura Demo",
    "version": "0.1.2",
    "author": "Ahura AI",
    "homepage_url": "https://www.ahuraai.com",
    "description": "The first iteration of Ahura AI's technology, packaged as a study sprint tool.",
    "manifest_version": 2,
    "browser_action": { 
        "default_title": "Ahura AI Demo.", 
        "default_icon":  "favicon.png"
     },
    "permissions": [
            "storage",
            "activeTab"
    ],
    "background": {
        "page": "background.html",
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"], 
        "js": ["content.js"]
    }],
    "icons":{
        "128":"favicon.png"
    }
  }
